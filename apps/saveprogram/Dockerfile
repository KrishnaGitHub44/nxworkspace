# Run the container with `docker run -p 3000:3000 -t saveprogram`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system saveprogram && \
          adduser --system -G saveprogram saveprogram

COPY dist/apps/saveprogram saveprogram
RUN chown -R saveprogram:saveprogram .

